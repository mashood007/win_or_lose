<%= form_for @game do |form|%>
  <div class="form-group">
    <%= form.label :title%>
    <%= form.text_field :title%>
  </div>

  <div class="form-group">
    <%= form.fields_for :steps do |step_from| %>
      <%= render "step_field", f: step_from %>
    <% end %>
    <%= link_to_add_fields "Add Step", form, :steps %>
  </div>

  <div class="form-group">
    <%= form.fields_for :players do |player_form| %>
      <%= render "player_field", f: player_form %>
    <% end %>
    <%= link_to_add_fields "Add Player", form, :players %>
  </div>


  <div class="col">
    <%= form.submit "Create", class: "btn btn-success"%>
  </div>  
<%end%>